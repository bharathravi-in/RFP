# RFP Application Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://user:password@localhost:5432/rfp_db
POSTGRES_USER=rfp_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=rfp_database

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===========================================
# CLOUD STORAGE CONFIGURATION
# ===========================================
# Choose one: 'local', 'gcp', 's3'
STORAGE_TYPE=local

# Local Storage
UPLOAD_FOLDER=/app/uploads

# Google Cloud Storage (if STORAGE_TYPE=gcp)
GCP_STORAGE_BUCKET=your-bucket-name
GCP_STORAGE_CREDENTIALS=/path/to/service-account.json
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GCP_RFP_REQ_PREFIX=rfp_requirement
GCP_KNOWLEDGE_PREFIX=knowledge

# AWS S3 (if STORAGE_TYPE=s3)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket

# ===========================================
# LLM CONFIGURATION
# ===========================================
# Primary LLM Provider: 'litellm', 'google', 'openai', 'anthropic'
PRIMARY_LLM_PROVIDER=litellm

# OpenAI
OPENAI_API_KEY=sk-your-openai-key

# Google AI (Gemini)
GEMINI_API_KEY=your-gemini-api-key
GOOGLE_AI_MODEL=gemini-2.0-flash-exp

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-key

# LiteLLM (for multi-provider support)
LITELLM_API_BASE=https://api.openai.com/v1
LITELLM_MODEL=gpt-4-turbo

# ===========================================
# EMBEDDING CONFIGURATION
# ===========================================
# Provider: 'google', 'openai', 'voyage', 'cohere'
EMBEDDING_PROVIDER=google
EMBEDDING_MODEL=text-embedding-3-small

# ===========================================
# VECTOR DATABASE (QDRANT)
# ===========================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=rfp_embeddings

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@yourapp.com

# ===========================================
# APPLICATION SETTINGS
# ===========================================
FLASK_ENV=development
FLASK_DEBUG=true
LOG_LEVEL=INFO
FRONTEND_URL=http://localhost:5173

# ===========================================
# RATE LIMITING (NEW)
# ===========================================
RATELIMIT_ENABLED=true
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_DEFAULT=100/hour
RATELIMIT_LLM_ENDPOINTS=10/minute
RATELIMIT_AUTH_ENDPOINTS=5/minute
RATELIMIT_UPLOAD_ENDPOINTS=20/minute

# ===========================================
# MONITORING & OBSERVABILITY (NEW)
# ===========================================
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
SENTRY_DSN=
APM_ENABLED=false
