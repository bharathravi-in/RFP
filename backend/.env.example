# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/autorespond

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=knowledge_base

# Google AI (supports both google-generativeai and google-adk)
GOOGLE_API_KEY=your-google-api-key
GOOGLE_MODEL=gemini-1.5-flash

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Upload
UPLOAD_FOLDER=uploads

# ============================================
# ENHANCEMENT FEATURES
# ============================================

# OpenTelemetry
OTEL_ENABLED=false
OTEL_EXPORTER_TYPE=console  # console, otlp, prometheus
OTEL_SERVICE_NAME=rfp-backend
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Embedding Cache (Redis)
EMBEDDING_CACHE_ENABLED=true
EMBEDDING_CACHE_TTL=86400  # 24 hours

# Vector DB Provider
VECTOR_DB_PROVIDER=qdrant  # qdrant, pinecone, pgvector

# AWS S3 Storage (optional)
# AWS_S3_BUCKET=your-bucket
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=xxx
# AWS_SECRET_ACCESS_KEY=xxx

# Logging
LOG_FORMAT=json  # json or text
LOG_LEVEL=INFO

# LiteLLM (fallback chain)
# LITELLM_API_KEY=xxx
# LITELLM_BASE_URL=https://litellm.example.com
# LITELLM_MODEL=gpt-4o-mini

# OpenAI (fallback)
# OPENAI_API_KEY=xxx
